<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_main"
    tools:context=".Login">

    <EditText
        android:id="@+id/text_user"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:layout_marginLeft="440dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/btn_yuanjiao_white"
        android:hint="用户名"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/text_password"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:layout_marginLeft="440dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/btn_yuanjiao_white"
        android:hint="密码"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <CheckBox
        android:id="@+id/login_checkbox"
        android:layout_width="109dp"
        android:layout_height="36dp"
        android:layout_marginLeft="516dp"
        android:layout_marginTop="248dp"

        android:checked="false"
        android:gravity="center|center"
        android:text="记住密码"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </CheckBox>

    <Button
        android:id="@+id/Login"
        android:layout_width="186dp"
        android:layout_height="107dp"
        android:layout_marginLeft="488dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/loginpage_btn"
        android:stateListAnimator="@null"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="288dp"
        android:layout_height="265dp"
        android:layout_marginLeft="52dp"

        android:layout_marginTop="48dp"
        android:background="@drawable/img_denglu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>